startup_message off
defscrollback 32000
defutf8 on
altscreen on

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= .g} %H |%=%{K}%{= w}%?%{K}%-Lw%?%{r}(%{W}%{w}%n%{w}*%f%t%?(%u)%?%{r})%{w}%?%{K}%+Lw%?%= %{g}|%{B} %m-%d  %{W}%c %{g} '
bind f eval "hardstatus ignore"
bind F eval "hardstatus alwayslastline"

shell -$SHELL
